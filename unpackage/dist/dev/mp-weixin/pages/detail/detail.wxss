.detail-container {
  padding: 20rpx;
  height: 100%;
  background-color: rgba(244, 244, 244, 0.51);
}
.detail-container .detail-item {
  align-items: center;
  border-radius: 10rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.detail-container .detail-item .detail-box-left {
  display: flex;
}
.detail-container .detail-item .image-box {
  width: 150rpx;
  height: 150rpx;
}
.detail-container .detail-item .image-box image {
  border-radius: 20rpx;
  width: 150rpx;
  height: 150rpx;
}
.detail-container .detail-item .title-box {
  display: flex;
  padding: 10rpx;
  flex-flow: column;
  padding-left: 20rpx;
  align-items: flex-start;
  justify-content: space-between;
}
.detail-container .detail-item .title-box .title {
  font-size: 40rpx;
  max-width: 320rpx;
  padding-right: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail-container .detail-item .title-box .tag {
  border: 1px solid #0660FF;
  color: #0660FF;
  padding: 5rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.detail-container .detail-item .price-box {
  display: flex;
  flex-flow: column;
  align-items: center;
}
.detail-container .detail-item .price-box .price {
  font-size: 28rpx;
  color: #ff2020;
}
.detail-container .detail-item .price-box .price::before {
  content: '赏';
  padding-right: 10rpx;
}
.detail-container .detail-item .price-box .price::after {
  content: '元';
}
.detail-container .detail-item .price-box .btn {
  max-width: 140rpx;
  margin-top: 30rpx;
}
.detail-container .detail-card {
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
}
.detail-container .detail-card .header .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
  border-bottom: 6rpx solid #0660FF;
}
.detail-container .detail-card .inner {
  padding-top: 20rpx;
}
.detail-container .detail-card .inner-fj {
  padding-top: 20rpx;
}
.detail-container .detail-card .inner-fj .fj-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0px;
}
.detail-container .detail-card .inner-fj .fj-list .name {
  font-size: 34rpx;
  color: #000;
  max-width: 600rpx;
  padding-right: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail-container .detail-card .inner-fj .fj-list .download-link {
  color: #0660FF;
}

